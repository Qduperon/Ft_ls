#==============================================================================#
#                              //  NAME  \\                                    #
#==============================================================================#

NAME = ft_ls 

#==============================================================================#
#                            //  SOURCES  \\                                   #
#==============================================================================#

SRCS = srcs/base_ls.c \
	   srcs/class.c \
	   srcs/data.c \
	   srcs/error.c \
	   srcs/exit.c \
	   srcs/init.c \
	   srcs/main.c \
	   srcs/parser.c \
	   srcs/print.c \
	   srcs/tools.c \
		srcs/tools_data.c \
	   srcs/tools_info.c \

#==============================================================================#
#                              //  FLAGS  \\                                   #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                           //  COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME): 
	make -C libft
	gcc -o $(NAME) $(SRCS) -I ./includes -lft -L./libft

#==============================================================================#
#                           //  DELETING  \\                                   #
#==============================================================================#

clean:
	make clean -C libft

fclean:
	make fclean -C libft
	rm -f $(NAME)

#==============================================================================#
#                             //  RETRY  \\                                    #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
